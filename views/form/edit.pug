extends ../shared/layout.pug

block content
  h1= title
  include ../shared/login_info.pug
  include ../shared/nav.pug

  script.
    function checkInput() {
      if(document.getElementById('newPass').value !== document.getElementById('newRePass').value) {
        alert('New password and retyped new password are not the same');
        return false;
      }

      return true;
    }

  form(action='/edit_process',method='post')
    fieldset
      strong Username *
      input(
        type='text'
        name='role'
        value= username
        disabled
        required
      )

      br

      strong CURRENT Password *
      input(
        type='password'
        name='currentpasswordinput'
        placeholder='current password'
        required
      )

      br

      strong NEW Password
      input(
        type='password'
        name='passwordinput'
        id='newPass'
        placeholder='new password'
      )

      br

      strong Re-type NEW password
      input(
        type='password'
        name='retypepassword'
        id='newRePass'
        placeholder='re-type new password'
      )

      br

      strong Email *
      input(
        type='email'
        name='emailinput'
        id='email'
        value= email
        placeholder='recovery email'
        required
      )
      br

      p
        strong=  'Fields marked with * are required'

      input(
        type='submit'
        value='Submit'
        onclick='return checkInput()'
      )
